          <tgroup cols="4">
                <colspec colname="COLSPEC0" colwidth="12"/>
                <colspec colname="COLSPEC1" colwidth="100"/>
                <colspec colname="COLSPEC2" colwidth="30"/>
                <colspec colname="COLSPEC3" colwidth="50*"/>
                
          <thead>
          
            <row>
              <entry colname="COLSPEC0" align="left">№</entry>
              <entry colname="COLSPEC1" align="center">Пункт меню</entry>
              <entry colname="COLSPEC2" align="center">Иконка</entry>
              <entry colname="COLSPEC3" align="center">Сочетание клавиш</entry>
            </row>
            
          </thead>
          
                <tbody>
                    <row>
                        <entry>1</entry>
                        <entry>Добавить подразделение</entry>
                        <entry><image href="img/icons/add.png" placement="break" width="16" align="center"/></entry>
                        <entry align="center"><uicontrol><shortcut>Ctrl + Alt + A</shortcut></uicontrol></entry>
                    </row>
                    
                    <row>
                        <entry>2</entry>
                        <entry>Редактировать подразделение</entry>
                        <entry><image href="img/icons/edit.png" placement="break" width="16" align="center"/></entry>
                        <entry align="center"><uicontrol><shortcut>Ctrl + Alt + E</shortcut></uicontrol></entry>
                    </row>
                    
                    <row>
                        <entry>3</entry>
                        <entry>Удалить подразделение</entry>
                        <entry><image href="img/icons/remove.png" placement="break" width="16" align="center"/></entry>
                        <entry align="center"><uicontrol><shortcut>Ctrl + Alt + D </shortcut></uicontrol></entry>
                    </row>
                                  
                </tbody>
                </tgroup>
</table>

