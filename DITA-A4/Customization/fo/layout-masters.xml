<fo:layout-master-set xmlns:fo="http://www.w3.org/1999/XSL/Format">

	<!--Front-matter simple masters-->
	<fo:simple-page-master master-name="front-matter-first"
        page-width="210mm"
        page-height="297mm">     
		<fo:region-body
			margin-top="20mm"
            margin-bottom="20mm"
            margin-left="30mm"
			margin-right="15mm"/>
		<fo:region-before extent="42mm"
            display-align="before"
            region-name="first-frontmatter-header"/>
		<fo:region-after extent="40mm"
            display-align="after"
            region-name="first-frontmatter-footer"/>
	</fo:simple-page-master>

